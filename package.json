{
  "name": "symfony-i18n-helper",
  "displayName": "Symfony i18n Helper",
  "description": "Facilite l’internationalisation avec Symfony : raccourci pour enregistrer la sélection, demander la clé i18n, autocomplétion, et sauvegarde dans le fichier de traduction configurable.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "symfony-i18n-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "symfony-i18n-helper.addI18nKey",
        "title": "Ajouter une clé i18n Symfony"
      }
    ],
    "keybindings": [
      {
        "command": "symfony-i18n-helper.addI18nKey",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Symfony i18n Helper",
      "properties": {
        "symfonyI18nHelper.translationFilePath": {
          "type": "string",
          "default": "translations/app.fr.yaml",
          "description": "Chemin relatif du fichier de traduction Symfony YAML (ex: translations/app.fr.yaml)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
