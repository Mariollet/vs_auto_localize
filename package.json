{
  "name": "symfony-i18n-helper",
  "displayName": "Symfony i18n Helper",
  "description": "VS Code extension to facilitate internationalization with Symfony",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "symfony-i18n-helper.addI18nKey",
        "title": "Add Symfony i18n Key"
      }
    ],
    "keybindings": [
      {
        "command": "symfony-i18n-helper.addI18nKey",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/vsce": "^3.6.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
